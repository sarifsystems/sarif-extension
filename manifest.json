{
	"manifest_version": 2,
	"name": "sarif",
	"version": "0.1.1",

	"description": "Time tracking for sarif",
	"icons": {
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},

	"applications": {
		"gecko": {
			"id": "sarif@cschomburg.com",
			"strict_min_version": "45.0"
		}
	},

	"permissions": [
		"<all_urls>",
		"alarms",
		"notifications",
		"storage",
		"tabs"
	],

	"background": {
		"scripts": ["client.js", "background.js"]
	},

	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": true
	}
}
